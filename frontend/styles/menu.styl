.menu

  margin 10px
  font-size 25px

  &__list
    padding 0
    margin 0 0 0 40px
    display none

  &__title
    background url(../assets/menu/closed.svg) no-repeat left
    padding-left 20px

  &_open &__title
    background-image url(../assets/menu/open.svg)

  &_open &__list
      display block
